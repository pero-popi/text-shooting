{
  "name": "text-shooting",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "serve": "cross-env NODE_ENV=production run-p manifest stylelint stylelint:watch css js content_scripts icons popup sound",
    "build": "cross-env NODE_ENV=production run-p manifest:build stylelint css:build js:build content_scripts:build icons:build popup:build sound:build",
    "css": "postcss src/styles/style.css -o dist/style.css --watch",
    "css:build": "postcss src/styles/style.css -o dist/style.css",
    "stylelint": "stylelint src/styles/**/*.css",
    "stylelint:watch": "watch -p 'src/styles/**/*.css' -c 'npm run stylelint'",
    "js": "webpack --mode production --watch",
    "js:build": "webpack --mode production",
    "content_scripts": "cpx -C src/content_scripts.js dist --watch",
    "content_scripts:build": "cpx -C src/content_scripts.js dist",
    "icons": "cpx -C 'src/**/*.png' dist --watch",
    "icons:build": "cpx -C 'src/**/*.png' dist",
    "popup": "cpx -C src/popup.html dist --watch",
    "popup:build": "cpx -C src/popup.html dist",
    "sound": "cpx -C 'src/**/*.mp3' dist --watch",
    "sound:build": "cpx -C 'src/**/*.mp3' dist",
    "manifest": "cpx -C src/manifest.json dist --watch",
    "manifest:build": "cpx -C src/manifest.json dist",
    "jsdoc": "jsdoc src/scripts/* -d ./jsdocs"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "autoprefixer": "^10.4.20",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "eslint": "^9.17.0",
    "eslint-webpack-plugin": "^4.2.0",
    "jsdoc": "^4.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-apply": "^0.12.0",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^11.0.5",
    "postcss-custom-properties": "^14.0.4",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-mixins": "^11.0.3",
    "postcss-nesting": "^13.0.1",
    "postcss-simple-vars": "^7.0.1",
    "stylelint": "^16.12.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.17",
    "terser-webpack-plugin": "^5.3.11",
    "watch-cli": "^0.2.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
